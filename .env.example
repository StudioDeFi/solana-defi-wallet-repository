# Solana DeFi Wallet Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to version control

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection URL
# For local development: postgresql://USERNAME:PASSWORD@localhost:5432/DATABASE_NAME
# For Vercel Postgres: Get from Vercel dashboard
DATABASE_URL="postgresql://USERNAME:PASSWORD@localhost:5432/DATABASE_NAME"

# Direct database URL for migrations (bypasses connection pooling)
# Only needed for production with connection pooling (Vercel, Neon, etc.)
# DIRECT_DATABASE_URL="postgresql://..."

# =============================================================================
# SOLANA RPC (Required)
# =============================================================================
# Mainnet RPC endpoint
# Free: https://api.mainnet-beta.solana.com (rate limited)
# Recommended: Use a dedicated RPC from QuickNode, Alchemy, or Helius
NEXT_PUBLIC_SOLANA_RPC_MAINNET="https://api.mainnet-beta.solana.com"

# Devnet RPC endpoint (for testing)
NEXT_PUBLIC_SOLANA_RPC_DEVNET="https://api.devnet.solana.com"

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================
# JWT secret for session management (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_SECURE_32_CHAR_SECRET_KEY"

# =============================================================================
# APPLICATION (Optional)
# =============================================================================
# Public URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# API KEYS (Optional - Enhanced Features)
# =============================================================================
# See API_KEYS_GUIDE.md for details on obtaining these keys

# Birdeye API - Real-time token prices and analytics
# Get at: https://birdeye.so/developers
BIRDEYE_API_KEY=""

# CoinGecko API - Market data
# Get at: https://www.coingecko.com/en/api
COINGECKO_API_KEY=""

# Solscan API - Blockchain explorer data
# Get at: https://public-api.solscan.io/
SOLSCAN_API_KEY=""

# Custom RPC API key (if using authenticated RPC)
SOLANA_RPC_API_KEY=""
